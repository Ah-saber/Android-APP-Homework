<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="24dp"
    android:background="@drawable/dialog_background_rounded">

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_success_check"
        android:layout_marginBottom="16dp"
        app:tint="@color/green_accent" />

    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="专注已完成！"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/text_dark"
        android:layout_marginBottom="12dp"/>

    <TextView
        android:id="@+id/dialogMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="恭喜！您成功完成了一次专注学习。"
        android:textSize="16sp"
        android:textColor="@color/text_medium"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/dialogPositiveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="120dp"
        android:text="太棒了！"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:background="@drawable/button_background_green" android:paddingVertical="12dp"
        android:stateListAnimator="@null"
        android:elevation="4dp"/>

</LinearLayout>