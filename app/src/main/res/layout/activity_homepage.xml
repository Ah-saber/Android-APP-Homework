<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.profile.UserProfileActivity">

    <!-- 用户头像 -->
    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_default_avatar"
        android:contentDescription="用户头像"
        android:scaleType="centerCrop"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="2dp"
        android:backgroundTint="?attr/colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/card_help" />

    <!-- 使用帮助 Card，边框若隐若现 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_help"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="8dp"
        app:cardStrokeWidth="1dp"
        app:cardStrokeColor="#33000000"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/iv_avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:drawableStart="@drawable/ic_help_outline"
            android:drawablePadding="8dp"
            android:text="使用帮助"
            android:textSize="16sp"
            android:textColor="@android:color/black" />

    </com.google.android.material.card.MaterialCardView>

    <!-- 我的目标 Card，边框若隐若现 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_goals"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="8dp"
        app:cardStrokeWidth="1dp"
        app:cardStrokeColor="#33000000"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/card_help"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_goals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:drawableStart="@drawable/ic_flag"
            android:drawablePadding="8dp"
            android:text="我的目标"
            android:textSize="16sp"
            android:textColor="@android:color/black" />

    </com.google.android.material.card.MaterialCardView>

    <!-- 我的记录 Card，边框若隐若现 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_records"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="8dp"
        app:cardStrokeWidth="1dp"
        app:cardStrokeColor="#33000000"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/card_goals"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_records"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:drawableStart="@drawable/ic_history"
            android:drawablePadding="8dp"
            android:text="我的记录"
            android:textSize="16sp"
            android:textColor="@android:color/black" />

    </com.google.android.material.card.MaterialCardView>

    <!-- 退出登录 按钮 -->
    <Button
        android:id="@+id/btn_logout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="退出登录"
        android:textAllCaps="false"
        android:padding="12dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/card_records"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="?attr/colorAccent"
        android:textColor="@android:color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>
